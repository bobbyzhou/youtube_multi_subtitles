{
  "name": "workspace",
  "version": "1.0.0",
  "description": "一个Chrome浏览器插件，可以在YouTube视频上显示双语字幕，支持多种翻译语言。",
  "main": "background.js",
  "scripts": {
    "test": "jest --runInBand",
    "test:ci": "jest --ci --color",
    "test:coverage": "jest --coverage --runInBand",
    "lint": "eslint *.js __tests__/*.js",
    "lint:fix": "eslint *.js __tests__/*.js --fix",
    "test:watch": "jest --watch --runInBand",
    "build:ext": "node scripts/build-extension.js",

    "e2e:build": "node e2e/build-extension.js",
    "e2e:test": "playwright test",
    "e2e": "npm run e2e:build && playwright test",
    "e2e:ci": "npm run e2e:build && playwright test --reporter=line"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bobbyzhou/youtube_multi_subtitles.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/bobbyzhou/youtube_multi_subtitles/issues"
  },
  "homepage": "https://github.com/bobbyzhou/youtube_multi_subtitles#readme",
  "devDependencies": {
    "@eslint/js": "^9.35.0",
    "eslint": "^9.35.0",
    "jest": "^27.5.1",
    "jest-chrome": "^0.8.0",
    "jest-coverage-badges": "^1.1.2",
    "jest-environment-jsdom": "^27.5.1",
    "nyc": "^17.1.0"
  }
}
